@model satelitesarecool.Models.Epic

@{
    ViewData["Title"] = "Epic camera";
}

<div>
    <h4 class="font-weight-bold">More about NASA EPIC is <a href="https://epic.gsfc.nasa.gov/about">here!</a></h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Identifier)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Identifier)
        </dd>
        <dt class="col-sm-2 font-weight-bold">
            @Html.DisplayNameFor(model => model.Caption)
        </dt>
        <dd class="col-sm-10 font-weight-bold">
            @Html.DisplayFor(model => model.Caption)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Version)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Version)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dd class="col-sm-10">
            <img alt="@Html.DisplayFor(model => model.ImageUrl)" src="@Html.DisplayFor(model => model.ImageUrl)" class="img-fluid" />
        </dd>
    </dl>
</div>
