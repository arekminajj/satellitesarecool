@model satelitesarecool.Models.Location

@{
    ViewData["Title"] = "Image";
}

<h1>Image</h1>

<div>
    <h4>Location</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Place)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Place)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Month)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Month)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Day)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Day)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Dim)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dim)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Url)
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.Url)" class="img-fluid"/>
            <p class="text-danger">It may take a minute load the image, please be patient!</p>
            <p class="text-danger">Some photos may be not good, it depends on date, location and satellite position.</p>
            <p class="text-danger">If photo isn't good enough try other date or change dim.</p>
            <p class="text-dark">If you want RAW photo <a target="_blank" href="@Html.DisplayFor(model => model.Url)">click here!</a></p>
        </dd>
    </dl>
</div>

